<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/bridal_heath"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/itemSmallEventNews_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="11.5dp"
            android:layout_marginBottom="11.5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/itemSmallEventNews_image"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/itemSmallNews_date_text"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:fontFamily="@font/univers_lt_cyr_55_roman"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:text="маркетинг" />

            <TextView
                android:id="@+id/itemSmallNews_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/univers_lt_cyr_65_bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                tools:text="SEO — Продвижение бизнеса и деградации" />

            <TextView
                android:id="@+id/itemSmallNews_content_text"
                android:layout_width="200dp"
                android:layout_height="14dp"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/univers_lt_cyr_55_roman"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="29 СЕНТЯБРЯ 22:00" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>