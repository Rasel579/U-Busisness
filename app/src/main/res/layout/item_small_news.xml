<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/bridal_heath"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/itemSmallNews_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/itemSmallNews_image"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/itemSmallNews_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/univers_lt_cyr_55_roman"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:text="18 октября" />

            <TextView
                android:id="@+id/itemSmallNews_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/univers_lt_cyr_65_bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                tools:text="SEO — Продвижение бизнеса и деградации" />

            <TextView
                android:id="@+id/itemSmallNews_content_text"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/univers_lt_cyr_55_roman"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:ellipsize="end"
                tools:text="Разнообразный и богатый опыт..." />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>