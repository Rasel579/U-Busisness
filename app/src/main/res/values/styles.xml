<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_lang_picker_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_45_light</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="base_onboard_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_55_roman</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="base_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/base_button_shape</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_65_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="base_page_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="base_text_field_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_65_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="base_text_field_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_55_roman</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="outlined_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/outlined_button_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_65_bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="text_only_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/bridal_heath</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_65_bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="constraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bridal_heath</item>
    </style>

    <style name="black_rounded_button_style">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_rounded_5</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_65_bold</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="gray_rounded_button_style">
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/shape_btn_rounded_5</item>
        <item name="backgroundTint">@color/gray_btn</item>
    </style>

    <style name="main_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_65_bold</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">170dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">200dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="input_text_style">
        <item name="android:background">@drawable/shape_input_rounded_4</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="home_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_67_bold_condensed</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textColorLink">@color/black</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="base_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/univers_lt_cyr_67_bold_condensed</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="base_toggle_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/toggle_outline</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="base_switch_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/toggle_widget_background</item>
        <item name="android:button">@null</item>
        <item name="android:fontFamily">@font/manrope_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/switch_color_selector</item>
    </style>


    <style name="MyWhiteColorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTabTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/univers_lt_cyr_55_roman</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:hint">@string/news_search</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="search_text_input_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>
</resources>